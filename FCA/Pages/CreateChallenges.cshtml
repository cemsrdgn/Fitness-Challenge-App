@page 
@model FCA.Pages.CreateChallengesModel

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Challenge</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/CreateChallenge.css">
</head>

<body>
    <main role="main" class="container" style="margin-top: 110px; margin-bottom: 30px">
       
        
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="form-wrap">
                    <h3 class="mb-4 text-center">Do you want to add a Challenge?</h3>
                    <form class="requires-validation" method="post" novalidate>
                        <div class="form-group">
                            <label for="categoryInput">Category</label>
                            <input class="form-control" list="categories" id="categoryInput" name="ChallengeResult.Category" placeholder="Select or enter a category" required>
                            <datalist id="categories">
                                <option value="Step"></option>
                                <option value="Squad"></option>
                                <option value="Cardio"></option>
                                <option value="Weight Loss"></option>
                                <option value="Yoga"></option>
                                <option value="CrossFit"></option>
                                <option value="Running"></option>
                            </datalist>
                            <div class="valid-feedback">Category field is valid!</div>
                            <div class="invalid-feedback">Please select or enter a category!</div>
                        </div>

                        <div class="form-group">
                            <label for="periodInput">Period</label>
                            <input class="form-control" type="text" name="ChallengeResult.Period" id="periodInput" placeholder="Enter period" required>
                            <div class="valid-feedback">Period field is valid!</div>
                            <div class="invalid-feedback">Please enter a period!</div>
                        </div>

                        <div class="form-group">
                            <label for="difficultyInput">Difficulty Level</label>
                            <select class="form-control" name="ChallengeResult.DifLevel" id="difficultyInput" required>
                                <option value="">Select Difficulty Level</option>
                                <option value="Easy">Easy</option>
                                <option value="Medium">Medium</option>
                                <option value="Hard">Hard</option>
                            </select>
                            <div class="valid-feedback">Difficulty Level field is valid!</div>
                            <div class="invalid-feedback">Please select a difficulty level!</div>
                        </div>

                        <div class="form-group">
                            <label for="instructionInput">Instruction</label>
                            <textarea class="form-control" name="ChallengeResult.Instruction" id="instructionInput" placeholder="Instruction" required></textarea>
                            <div class="valid-feedback">Instruction field is valid!</div>
                            <div class="invalid-feedback">Instruction field cannot be blank!</div>
                        </div>


                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-secondary">Add Challenge</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
</body>

</html>
