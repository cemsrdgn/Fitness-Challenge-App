@page "{category?}"
@model FCA.Pages.ViewLeaderBoardModel
@{
    ViewData["Title"] = "LeaderBoard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/font-awesome.min.css">
<link rel="stylesheet" href="../css/ViewLeaderBoard.css">

<div class="panel" style="margin-top:100px">
    <div class="panel-heading">
        <h4 class="title">LeaderBoard - @(string.IsNullOrEmpty(Model.Category) ? "All Challenges" : $"{Model.Category} Category")</h4>
    </div>
    <div class="panel-body">
        @if (Model.Challenges != null && Model.Challenges.Any())
        {
            <table class="leaderboard-table">
                <thead>
                    <tr>
                        <th>Instruction</th>
                        <th>Category</th>
                        <th>Period</th>
                        <th>Difficulty Level</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var challenge in Model.Challenges)
                    {
                        <tr>
                            <td>@challenge.Instruction</td>
                            <td>@challenge.Category</td>
                            <td>@challenge.Period</td>
                            <td>@challenge.DifLevel</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No challenges available @(string.IsNullOrEmpty(Model.Category) ? "." : $"for the {Model.Category} category.").</p>
        }
    </div>
</div>
